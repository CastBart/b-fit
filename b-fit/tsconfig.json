{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker" // ðŸ‘ˆ add this for Service Worker typings
    ],
    "types": [
      "@serwist/next/typings" // ðŸ‘ˆ add this for window.serwist typing
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/ui/HomeNavigation.js",
    "components/home/HomeHeader.js"
  ],
  "exclude": [
    "node_modules",
    "public/sw.js" // ðŸ‘ˆ exclude the built service worker
  ]
}
